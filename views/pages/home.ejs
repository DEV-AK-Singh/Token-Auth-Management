<!-- Home Page Content -->
<section class="text-center mt-12">
    <h1 class="text-4xl font-bold mb-4">Welcome to the Dashboard</h1>
    <p class="text-lg text-gray-600">manage your projects with ease and confidence using session auth management system</p>
    <% if (user) { %>
        <p class="text-lg text-gray-900 mt-4"><b>Welcome,</b> <%= user.user.name %></p>
        <p class="text-lg text-gray-900 mt-4"><b>Email:</b> <%= user.user.email %></p>
        <p class="text-lg text-gray-900 mt-4 max-w-3xl overflow-wrap break-words mx-auto"><b>TokenId:</b> <%= tokenId %></p>
        <div class="mt-8">
            <a href="/logout" class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded">Logout</a>
        </div>
    <% } %>
</section>
